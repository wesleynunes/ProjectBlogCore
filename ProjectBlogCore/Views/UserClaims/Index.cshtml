@model IEnumerable<ProjectBlogCore.Models.ViewModels.UserClaimsViewModel>
@*@model IEnumerable<ProjectBlogCore.Data.ApplicationUserClaim>*@

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaimType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaimValue)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserClaimId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UserClaimId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UserClaimId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
