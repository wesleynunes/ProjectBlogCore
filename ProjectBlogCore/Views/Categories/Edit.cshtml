@model ProjectBlogCore.Models.Post.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control form-control-sm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>        
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-warning btn-sm" /> |
                <a class="btn btn-secondary btn-sm" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
